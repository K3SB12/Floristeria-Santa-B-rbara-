        });
        
        // Cerrar menú al hacer clic en un enlace
        document.querySelectorAll('#navMenu a').forEach(link => {
            link.addEventListener('click', () => {
                document.getElementById('navMenu').classList.remove('active');
            });
        });
        
        // Manejo de selección de productos
        document.querySelectorAll('.select-product').forEach(button => {
            button.addEventListener('click', function() {
                const productName = this.getAttribute('data-name');
                const productPrice = this.getAttribute('data-price');
                document.getElementById('product').value = productName + ' - $' + productPrice;
                updateWhatsAppPreview();
            });
        });
        
        // Mostrar/ocultar campo de dirección según método de entrega
        document.querySelectorAll('input[name="delivery"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const addressGroup = document.getElementById('addressGroup');
                if (this.value === 'envio') {
                    addressGroup.style.display = 'block';
                    document.getElementById('address').required = true;
                } else {
                    addressGroup.style.display = 'none';
                    document.getElementById('address').required = false;
                }
                updateWhatsAppPreview();
            });
        });
        
        // Actualizar vista previa del mensaje de WhatsApp
        function updateWhatsAppPreview() {
            const product = document.getElementById('product').value || '[Selecciona un producto]';
            const name = document.getElementById('name').value || '[Tu nombre aparecerá aquí]';
            const phone = document.getElementById('phone').value || '[Tu teléfono]';
            const date = document.getElementById('date').value || '[Fecha seleccionada]';
            const deliveryMethod = document.querySelector('input[name="delivery"]:checked').value === 'envio' ? 'Envío a Domicilio' : 'Recogida en Tienda';
            const address = document.getElementById('address').value || '[Dirección si aplica]';
            const message = document.getElementById('message').value || '[Mensaje opcional]';
            const notes = document.getElementById('notes').value || '[Instrucciones especiales]';
            
            const whatsappText = `¡Hola! Me gustaría hacer un pedido en Floristería Santa Bárbara:

Producto: ${product}
Nombre: ${name}
Teléfono: ${phone}
Fecha de entrega: ${date}
Método: ${deliveryMethod}
${deliveryMethod === 'Envío a Domicilio' ? `Dirección: ${address}` : 'Recogida en tienda'}
${message !== '[Mensaje opcional]' ? `Mensaje para tarjeta: ${message}` : ''}
${notes !== '[Instrucciones especiales]' ? `Instrucciones: ${notes}` : ''}

Por favor confírmenme disponibilidad y costo de envío. ¡Gracias!`;
            
            document.getElementById('whatsappPreview').textContent = whatsappText;
        }
        
        // Agregar eventos para actualizar la vista previa
        document.querySelectorAll('#orderForm input, #orderForm textarea').forEach(input => {
            input.addEventListener('input', updateWhatsAppPreview);
        });
        
        document.getElementById('date').addEventListener('change', updateWhatsAppPreview);
        
        // Configurar fecha mínima como hoy
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('date').min = today;
        
        // Generar enlace de WhatsApp
        document.getElementById('generateBtn').addEventListener('click', function() {
            // Validar formulario
            if (!document.getElementById('product').value) {
                alert('Por favor selecciona un producto de la lista.');
                return;
            }
            
            if (!document.getElementById('name').value || !document.getElementById('phone').value || !document.getElementById('date').value) {
                alert('Por favor completa los campos obligatorios (Nombre, Teléfono y Fecha).');
                return;
            }
            
            if (document.querySelector('input[name="delivery"]:checked').value === 'envio' && !document.getElementById('address').value) {
                alert('Por favor ingresa la dirección de envío.');
                return;
            }
            
            // Obtener texto del mensaje
            const whatsappText = document.getElementById('whatsappPreview').textContent;
            
            // Codificar para URL
            const encodedText = encodeURIComponent(whatsappText);
            
            // Número de WhatsApp (reemplaza con tu número real)
            const phoneNumber = "573001234567"; // Ejemplo: reemplaza con tu número
            
            // Crear enlace de WhatsApp
            const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodedText}`;
            
            // Abrir enlace
            window.open(whatsappLink, '_blank');
        });
        
        // Inicializar vista previa
        updateWhatsAppPreview();
    </script>
</body>
</html>
